extends layout

block content
  
  div(id="centered_div")
    a(href="/movies/table/datatable") back

    h2 Modify movie named: #{movie.movie_title}


    form(action="/movies/#{movie.id}/update", method="post", enctype="multipart/form-data")
      div(class="form-group")
        label(for="movie-title-field") Movie Title:
        input(id="movie-title-field" class="form-control" type="text", name="movie_title", value="#{movie.movie_title}")
      div(class="form-group")
        label(for="movie-studio-field") Studio:
        input(id="movie-studio-field" class="form-control" type="text", name="studio", value="#{movie.studio}")
      div(class="form-group")
        label(for="movie-year-field") Year:
        input(id="movie-year-field" class="form-control" type="text", name="year", value="#{movie.year}")
      div(class="form-group")
        label(for="movie-box-office-field") Box Office $:
        input(id="movie-box-office-field" class="form-control" type="text", name="box_office", value="#{movie.box_office}")
      div(class="form-group")
        label(for="movie-picture-field") Poster Picture:
        input(id="movie-picture-field" type="file", name="picture", 
        value="#{movie.picture}")
        br
        img(src="http://panogi.com/#{movie.picture}" class="img-responsive center-block" alt="Poster Image")
        
      input(type="submit" class="btn btn-default")


    


  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
  script(src='https://cdn.datatables.net/v/bs-3.3.6/jq-2.2.3/dt-1.10.12/datatables.min.js')
